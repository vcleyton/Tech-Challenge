# Chave secreta da aplicação Flask
# Gere uma chave segura com: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your_secret_key_here

# URI do banco de dados
# Exemplo: sqlite:///user.db (SQLite), postgresql://user:pass@localhost/dbname
DATABASE_URI=sqlite:///user.db

# Chave secreta para assinatura JWT
# Gere uma chave segura com: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=your_jwt_secret_key_here

# Tempo de expiração do token JWT em segundos (padrão: 1800 = 30 minutos)
JWT_ACCESS_TOKEN_EXPIRES_SECONDS=1800

# Localização do token JWT (headers, cookies, etc)
JWT_TOKEN_LOCATION=headers
